{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2016", "esnext.asynciterable"],
    "module": "commonjs",
    "jsx": "react",

    "rootDir": "dev",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "newLine": "LF",

    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "pretty": true
  },
  "include": ["dev/**/*.ts"]
}
